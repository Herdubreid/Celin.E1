<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Celin.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Celin.Views"
    xmlns:services="clr-namespace:Celin.Services"
    xmlns:local="clr-namespace:Celin"
    x:DataType="local:AppShell"
    FlyoutBehavior="Flyout">

    <Shell.ToolbarItems>
        <ToolbarItem
            Text="Logout"
            Command="{Binding LogoutCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="MaterialOutlined"
                    Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                    Glyph="{StaticResource IconLogout}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </Shell.ToolbarItems>

    <ShellContent
        Title="Address Book"
        ContentTemplate="{DataTemplate views:AddressBookPage}"/>
    
    <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate views:AboutPage}"/>

</Shell>
