<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Shell">
        <Setter Property="Background"
                Value="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource SecondaryDark}}"/>
    </Style>
    <Style TargetType="Label" Class="Error">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource Error}, Dark={StaticResource ErrorDark}}"/>
    </Style>
    <Style x:Key="InvalidEntryStyle" TargetType="Entry">
        <Setter Property="PlaceholderColor"
                Value="{AppThemeBinding Light={StaticResource Error}, Dark={StaticResource ErrorDark}}"/>
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource ErrorContainer}, Dark={StaticResource ErrorContainerDark}}"/>
    </Style>

</ResourceDictionary>